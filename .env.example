# Environment Configuration
NODE_ENV=development
PORT=3001

# Security
ENCRYPTION_KEY=your-32-character-secret-key-here-1234

# Shopify Configuration (Optional - can be set via UI)
SHOPIFY_STORE_URL=
SHOPIFY_ACCESS_TOKEN=
SHOPIFY_WEBHOOK_SECRET=

# Database Configuration
DATABASE_PATH=./data/shopify_sync.db

# Application Settings
AUTO_SYNC_ENABLED=true
SYNC_TIME=02:00
RATE_LIMIT_DELAY=500
MAX_RETRIES=3

# Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Export Settings
DEFAULT_CURRENCY=USD
EXPORT_PATH=./exports
AUTO_CLEANUP_DAYS=30

# Email Notifications (Optional)
EMAIL_NOTIFICATIONS=false
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
NOTIFICATION_EMAIL=

# Azure Configuration (For deployment)
AZURE_APP_SERVICE_URL=
AZURE_SQL_CONNECTION_STRING=