{
    "name": "shopify-google-merchant-sync",
    "version": "1.0.0",
    "description": "Automated Shopify to Google Merchant Center feed generator",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "concurrently \"nodemon server.js\" \"cd client && npm start\"",
        "build": "cd client && npm run build",
        "install-client": "cd client && npm install",
        "setup": "npm install && npm run install-client"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "sqlite3": "^5.1.6",
        "axios": "^1.6.0",
        "exceljs": "^4.4.0",
        "node-cron": "^3.0.3",
        "crypto": "^1.0.1",
        "dotenv": "^16.3.1",
        "multer": "^1.4.5-lts.1",
        "helmet": "^7.1.0",
        "express-rate-limit": "^7.1.5"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "keywords": [
        "shopify",
        "google-merchant",
        "automation",
        "ecommerce"
    ],
    "author": "Your Name",
    "license": "MIT"
}